{
    "compilerOptions": {
      "module": "es6",
      "jsx": "react",
      "target": "es5",
      "sourceMap": true,
      "outDir": "dist/",
      "allowJs": true,
      "preserveConstEnums": true,
      "experimentalDecorators": true,
      "pretty": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "skipLibCheck": true,
      "baseUrl": "./"
    },
    "include": ["front/**/*.tsx", "front/**/*.ts", "back/**/*.tsx", "back/**/*.ts"],
    "exclude": [
      "front/node_modules", "typings/*"]
  }
  